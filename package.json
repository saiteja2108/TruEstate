{
  "name": "truestate-retail-sales",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "start:backend": "npm --prefix ./backend run dev",
    "start:frontend": "npm --prefix ./frontend run dev",
    "start": "concurrently \"npm: start:backend\" \"npm: start:frontend\"",
    "build": "npm --prefix ./frontend run build"
  },
  "devDependencies": {
    "concurrently": "^8.0.0"
  }
}